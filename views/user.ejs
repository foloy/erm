<% include header.ejs%>
<div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <legend>员工管理</legend>
            <div class="row">
                <div class="col-md-9">
                    <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-plus"></i>新增
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">新增员工</h4>
                                </div>
                                <div class="modal-body">
                                    <form style="background-color: #ffffff" method="post" action="/reg">
                                        <div class="row form-group">
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">编号</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="code" placeholder="必填">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">姓名</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="name" placeholder="必填">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">部门</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="dept" placeholder="必填">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">性别</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="gender" placeholder="必填">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">职务</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="position" placeholder="必填">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">工种</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="kind" placeholder="必填">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-sm-3 control-label">权限值</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control input-sm" name="right" placeholder="必填">
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-sm">保存</button>
                                    </form>
                                </div>
                                <!--<div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                                    <button type="submit" class="btn btn-sm">保存</button>
                                </div>-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="input-group">
                        <input type="text" class="form-control input-sm" ng-model="queryText" placeholder="请输入姓名"/>
                        <span class="input-group-btn">
                            <button class="btn btn-sm" type="button">
                                <span class="fa fa-search" tooltip="查询"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered">
                        <thead>
                        <th style="text-align: center">编号</th>
                        <th style="text-align: center">用户名</th>
                        <th style="text-align: center">用户编号</th>
                        <th style="text-align: center">部门</th>
                        <th style="text-align: center">性别</th>
                        <th style="text-align: center">职务</th>
                        <th style="text-align: center">工种</th>
                        <th style="text-align: center">权限值</th>
                        <th style="text-align: center">操作</th>
                        </thead>
                        <tr>
                            <% users.forEach(function(user, index){ %>
                            <td style="text-align: center"><%= index+1%></td>
                            <td style="text-align: center"><a href="#"><%= user.name %></a></td>
                            <td style="text-align: center"><%= user.code %></td>
                            <td style="text-align: center"><%= user.code %></td>
                            <td style="text-align: center"><%= user.code %></td>
                            <td style="text-align: center"><%= user.code %></td>
                            <td style="text-align: center"><%= user.code %></td>
                            <td style="text-align: center"><%= user.code %></td>
                            <td style="text-align: center">
                                <a href="" tooltip="授权"><i class="fa fa-lock"></i></a>
                                <a href="" tooltip="重置密码"><i class="fa fa-reply"></i></a>
                                <a href="/user/delete?code=<%=user.code%>" tooltip="删除"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>
<%= include footer.ejs%>